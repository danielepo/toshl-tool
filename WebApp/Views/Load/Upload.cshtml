@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>File Loader</h2>
@using (Html.BeginForm("Upload", "Load", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.Label("file", "File to Upload")
    <input type="file" name="file" />
    <p class="help-block">File to upload to Toshl </p>
    <input type="radio" id="contoCorrente" name="isContoCorrente" value="true" checked /><label for="contoCorrente">Conto Corrente</label><br />
    <input type="radio" id="cartaCredito" name="isContoCorrente" value="false" /><label for="cartaCredito"> Carta Credito</label><br />
    <input type="submit" class="btn btn-default" />
}
@Html.ActionLink("Back to Home", "Index", "Home")